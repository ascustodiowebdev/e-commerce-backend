<h1>Your Shopping Cart</h1>

<% if @cart.cart_items.empty? %>
  <p>Your cart is empty!</p>
<% else %>
  <table>
    <tr>
      <th>Item</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total</th>
    </tr>

    <% @cart.cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= number_to_currency(cart_item.item.price) %></td>
        <td><%= cart_item.quantity %></td>
        <td><%= number_to_currency(cart_item.total_price) %></td>
      </tr>
    <% end %>
  </table>

  <p>Total: <%= number_to_currency(@cart.total_price) %></p>
  <%= link_to 'Empty cart', cart_path, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
